# API Keys
OPENAI_API_KEY=your_openai_api_key
HUGGINGFACE_API_KEY=your_huggingface_api_key

# AI Service Configuration
DEFAULT_PROVIDER=openai
OPENAI_MODEL=gpt-4
HUGGINGFACE_MODEL=gpt2

# Storage Paths
MEMORY_PATH=data/memory
TEMPLATES_DIR=data/templates
STENCILS_DIR=data/stencils
OUTPUT_DIR=data/output
UPLOAD_DIR=temp/uploads

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
CORS_ORIGINS=["http://localhost:3000"]

# Workflow Configuration
MAX_REFINEMENT_ITERATIONS=3
MIN_CONFIDENCE_THRESHOLD=0.7
MAX_TRAINING_DURATION=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Browserbase Configuration
BROWSERBASE_API_KEY=your_browserbase_key_here
BROWSERBASE_PROJECT_ID=your_project_id_here

# Screenpipe Configuration
SCREENPIPE_API_KEY=your_screenpipe_key_here
SCREENPIPE_ENDPOINT=wss://api.screenpipe.com/ws

# Visio Agent Settings
VISIO_STYLE_RULES=config/visio_style_rules
SPEC_CACHE_TTL=3600 